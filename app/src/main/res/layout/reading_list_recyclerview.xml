<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="5dp"
        android:backgroundTint="#EEF9FF"
        app:cardCornerRadius="5dp"
        app:cardElevation="2dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
           >

            <TextView
                android:id="@+id/number_Textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:fontFamily="@font/calibribold"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                tools:ignore="HardcodedText" />


            <ImageView
                android:id="@+id/waterPercentage_Imageview"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/water_percentage_icon"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"/>

            <TextView
                android:id="@+id/waterPercentage_Textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100 %"
                android:layout_toEndOf="@id/waterPercentage_Imageview"
                android:fontFamily="@font/calibribold"
                android:textSize="25sp"
                android:layout_centerVertical="true"
                android:textColor="@color/black"
                tools:ignore="HardcodedText" />

            <View
                android:layout_width="4dp"
                android:layout_height="match_parent"
                android:background="@color/black"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_centerHorizontal="true"/>

            <ImageView
                android:id="@+id/phLevel_Imageview"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ph_value_icon"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/phLevel_Textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9.9"
                android:textColor="@color/black"
                android:fontFamily="@font/calibribold"
                android:textSize="25sp"
                android:layout_toStartOf="@id/phLevel_Imageview"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp"
                tools:ignore="HardcodedText" />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>